{% extends 'base.html.twig' %}

{% block body %}
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>

        .card-custom {
            border-radius: 15px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        .card-header-custom {
            background-color: #0d47a1;
            color: white;
            border-top-left-radius: 15px;
            border-top-right-radius: 15px;
            font-size: 1.25rem;
            text-align: center;
        }
        .btn-primary-custom {
            background-color: #0d47a1;
            border-color: #0d47a1;
        }
        .btn-primary-custom:hover {
            background-color: #0b3c91;
            border-color: #0b3c91;
        }
        .form-control:focus {
            border-color: #0d47a1;
            box-shadow: 0 0 0 0.2rem rgba(13, 71, 161, 0.25);
        }
    </style>
    {{ parent() }}

    <div class="container mt-5">

        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card card-custom">
                    <div class="card-header card-header-custom">Ajouter un message</div>
                    <div class="card-body">
                        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
                        <div class="form-group row">
                            <label for="name" class="col-md-4 col-form-label text-md-right">Nom et Pr√©nom:</label>
                            <div class="col-md-6">
                                {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="message" class="col-md-4 col-form-label text-md-right">Message:</label>
                            <div class="col-md-6">
                                {{ form_widget(form.message, {'attr': {'class': 'form-control', 'rows': 5}}) }}
                            </div>
                        
                        </div>
                        <div class="form-group row mb-0">
                            <div class="col-md-6 offset-md-4">
                                <button type="submit" class="btn btn-primary btn-primary-custom" >Ajouter</button>
                            </div>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
<br><br><br><br><br>
{% endblock %}
