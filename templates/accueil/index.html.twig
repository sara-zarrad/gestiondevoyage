        }
         .slide16 {
            background-image: url('{{ asset('images/16.jpg') }}');
        }
    </style>
<body>
    <section class="wrapper">
        <i class="fa-solid fa-arrow-left button" id="prev"></i>
        <div class="image-container">
            <div class="carousel">
                <div class="slide1"></div>
                <div class="slide2"></div>
                <div class="slide3"></div>
                <div class="slide4"></div>
                <div class="slide5"></div>
                <div class="slide6"></div>
                <div class="slide7"></div>
                <div class="slide8"></div>
                <div class="slide9"></div>
                <div class="slide10"></div>
                <div class="slide11"></div>
                <div class="slide12"></div>
                <div class="slide13"></div>
                <div class="slide14"></div>
                <div class="slide15"></div>
                <div class="slide16"></div>
            </div>
        </div>
        <i class="fa-solid fa-arrow-right button" id="next"></i>
    </section>
<body>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const carousel = document.querySelector(".carousel"),
                slides = document.querySelectorAll(".carousel div"),
                buttons = document.querySelectorAll(".button");
            let imageIndex = 0,
                intervalId;

            const autoSlide = () => {
                intervalId = setInterval(() => slideImage(++imageIndex), 2000);
            };

            autoSlide();

            const slideImage = () => {
                imageIndex = imageIndex === slides.length ? 0 : imageIndex < 0 ? slides.length - 1 : imageIndex;
                carousel.style.transform = `translateX(-${imageIndex * 100 / slides.length}%)`;
            };

            const updateClick = (e) => {
                clearInterval(intervalId);
                imageIndex += e.target.id === "next" ? 1 : -1;
                slideImage();
                autoSlide();
            };

            buttons.forEach(button => button.addEventListener("click", updateClick));
            document.querySelector(".wrapper").addEventListener("mouseover", () => clearInterval(intervalId));
            document.querySelector(".wrapper").addEventListener("mouseleave", autoSlide);
        });
    </script>
